<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¡"
                android:textSize="32sp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radar Connection"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configure radar server connection settings"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Radar Base URL -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Radar Base URL"
            app:helperText="Enter the full URL of your radar server"
            app:helperTextEnabled="true"
            app:startIconDrawable="@drawable/ic_radar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etRadarBaseUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Poll Interval -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Tracks Poll Interval (seconds)"
            app:helperText="How often to fetch track data from radar server"
            app:helperTextEnabled="true"
            app:prefixText="Every "
            app:suffixText=" sec">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPollInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Stale Timeout -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:hint="Stale Timeout (seconds)"
            app:helperText="Mark tracks as stale after this duration"
            app:helperTextEnabled="true"
            app:prefixText="After "
            app:suffixText=" sec">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etStaleTimeout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Test Connection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Test"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTestConnection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Connection"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <TextView
                    android:id="@+id/tvTestResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@android:color/white"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <!-- FOV Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ¯"
                android:textSize="28sp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radar FOV Display"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configure radar field of view visualization"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- FOV Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E3F2FD"
            app:strokeWidth="1dp"
            app:strokeColor="#1976D2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸"
                    android:textSize="18sp"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FOV data is fetched from /api/fovs.kml endpoint using the same base URL above"
                    android:textSize="12sp"
                    android:textColor="#1565C0" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- FOV Poll Interval -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="FOV Poll Interval (seconds)"
            app:helperText="How often to refresh radar FOV data (FOV changes less frequently)"
            app:helperTextEnabled="true"
            app:prefixText="Every "
            app:suffixText=" sec">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFovPollInterval"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- FOV Display Options Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display Options"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Show FOV Polygon -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowFov"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show FOV Coverage Area"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display radar detection coverage polygon on map"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:paddingStart="48dp"
                    android:layout_marginBottom="12dp" />

                <!-- Show Boresight -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowBoresight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Boresight Line"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display radar forward direction (0Â° azimuth reference)"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:paddingStart="48dp"
                    android:layout_marginBottom="12dp" />

                <!-- Show Radar Markers -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowRadarMarkers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Radar Location Markers"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display radar unit markers with name labels"
                    android:textSize="11sp"
                    android:textColor="#666666"
                    android:paddingStart="48dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Test FOV Connection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="FOV Connection Test"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnTestFovConnection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test FOV Endpoint"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <TextView
                    android:id="@+id/tvFovTestResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@android:color/white"
                    android:visibility="gone"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
