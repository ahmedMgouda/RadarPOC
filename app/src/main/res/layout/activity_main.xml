<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Main Content (Map or Camera - Full Screen) -->
    <FrameLayout
        android:id="@+id/mainContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Map Container -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- Camera Container (when camera is main view) -->
        <FrameLayout
            android:id="@+id/cameraContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- PiP Window (Draggable) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pipContainer"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|start"
        android:elevation="8dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@android:color/black">

        <!-- PiP Content (Camera or Map) -->
        <FrameLayout
            android:id="@+id/pipContentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- PiP Border Overlay -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_pip_border" />

    </androidx.cardview.widget.CardView>

    <!-- Top Bar (Collapsible, Transparent) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:background="@drawable/bg_top_bar_gradient">

        <!-- Collapse Button -->
        <ImageButton
            android:id="@+id/btnCollapseTopBar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_chevron_up"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@android:color/white"
            android:contentDescription="@string/collapse_top_bar" />

        <!-- Status Indicators -->
        <LinearLayout
            android:id="@+id/statusIndicators"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="8dp">

            <!-- Radar Status Dot -->
            <View
                android:id="@+id/radarStatusDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_status_dot_disconnected" />

            <!-- Drone Status Dot -->
            <View
                android:id="@+id/droneStatusDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_status_dot_disconnected" />

            <!-- Camera Status Dot -->
            <View
                android:id="@+id/cameraStatusDot"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/bg_status_dot_disconnected" />

            <!-- Track Count -->
            <TextView
                android:id="@+id/trackCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="5" />

            <!-- Battery Indicator -->
            <TextView
                android:id="@+id/batteryIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="ðŸ”‹ 85%" />

        </LinearLayout>

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_icon_button"
            android:src="@drawable/ic_settings"
            android:scaleType="centerInside"
            android:padding="8dp"
            app:tint="@android:color/white"
            android:contentDescription="@string/settings" />

    </LinearLayout>

    <!-- Collapsed Top Bar Tab (shown when top bar is hidden) -->
    <LinearLayout
        android:id="@+id/topBarCollapsedTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:background="@drawable/bg_collapsed_tab"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_down"
            app:tint="@android:color/white"
            android:contentDescription="@string/expand_top_bar" />

    </LinearLayout>

    <!-- Bottom Floating Controls -->
    <FrameLayout
        android:id="@+id/bottomControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <!-- Show PiP Button (left side, shown when PiP is hidden) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowPip"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="start|bottom"
            android:minWidth="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:visibility="gone"
            app:icon="@drawable/ic_camera"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:cornerRadius="20dp"
            style="@style/Widget.Material3.Button.TonalButton"
            tools:visibility="visible" />

        <!-- Locked Track Chip (right side, shown when track is locked) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/lockedTrackChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_lock"
            app:closeIconVisible="true"
            app:chipBackgroundColor="#CC000000"
            android:textColor="@android:color/white"
            tools:text="Track 357"
            tools:visibility="visible" />

    </FrameLayout>

    <!-- Bottom Sheet for Track Info -->
    <LinearLayout
        android:id="@+id/trackInfoBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"
        android:padding="16dp"
        android:elevation="16dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="80dp">

        <!-- Drag Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_drag_handle" />

        <!-- Peek Content (always visible when sheet is shown) -->
        <LinearLayout
            android:id="@+id/trackInfoPeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp">

            <!-- Track Title -->
            <TextView
                android:id="@+id/trackInfoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Track 357" />

            <!-- Lock Button -->
            <ImageButton
                android:id="@+id/btnLockTrack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_lock_open"
                android:padding="8dp"
                app:tint="@android:color/white"
                android:contentDescription="@string/track_lock" />

            <!-- Close Button -->
            <ImageButton
                android:id="@+id/btnCloseTrackInfo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_close"
                android:padding="8dp"
                app:tint="@android:color/white"
                android:contentDescription="@string/dialog_cancel" />

        </LinearLayout>

        <!-- Quick Info Row -->
        <TextView
            android:id="@+id/trackInfoQuick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#B0FFFFFF"
            android:textSize="13sp"
            tools:text="ðŸ“ 30.04Â°, 31.23Â°  ðŸ“ 120m  ðŸ’¨ 15m/s" />

        <!-- Expanded Content (visible when pulled up) -->
        <LinearLayout
            android:id="@+id/trackInfoExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#33FFFFFF" />

            <!-- Position Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/track_info_position"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trackInfoPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="30.044400Â°, 31.235700Â°" />

            <!-- Movement Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/track_info_movement"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trackInfoMovement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Alt: 120m  Speed: 15m/s  Heading: 45Â°" />

            <!-- Radar Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/track_info_radar_data"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trackInfoRadar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Range: 1.2km  Azimuth: 32Â°" />

            <!-- Classification Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/track_info_classification"
                android:textColor="#80FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trackInfoClassification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Drone (85%)" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#33FFFFFF" />

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCenterOnTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="ðŸ“ Center on Map"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
