<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <!-- Main Content (Map or Camera - Full Screen) -->
    <FrameLayout
        android:id="@+id/mainContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Map Container -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/mapFragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- Camera Container (when camera is main view) -->
        <FrameLayout
            android:id="@+id/cameraContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <!-- PiP Window (Draggable) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pipContainer"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:layout_gravity="top|start"
        android:visibility="gone"
        app:cardElevation="8dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="@android:color/black"
        app:strokeWidth="2dp"
        app:strokeColor="#66FFFFFF">

        <!-- PiP Content (Camera or Map) -->
        <FrameLayout
            android:id="@+id/pipContentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Top Bar (Collapsible, Transparent) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/bg_top_bar_gradient"
        android:paddingVertical="4dp"
        app:contentInsetStart="8dp"
        app:contentInsetEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Collapse Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCollapseTopBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_chevron_up"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@android:color/white"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/collapse_top_bar" />

            <!-- Status Icons -->
            <LinearLayout
                android:id="@+id/statusIndicators"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="8dp">

                <!-- Radar Status Icon -->
                <ImageView
                    android:id="@+id/radarStatusIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_radar"
                    android:alpha="0.4"
                    android:contentDescription="@string/status_radar_disconnected" />

                <!-- Drone Status Icon -->
                <ImageView
                    android:id="@+id/droneStatusIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_drone"
                    android:alpha="0.4"
                    android:contentDescription="@string/status_drone_disconnected" />

                <!-- Separator -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="#44FFFFFF" />

                <!-- Track Count with Icon -->
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_track"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/trackCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="5" />

            </LinearLayout>

            <!-- Settings Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_settings"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@android:color/white"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/settings" />

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Collapsed Top Bar Tab (shown when top bar is hidden) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/topBarCollapsedTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:visibility="gone"
        app:cardCornerRadius="0dp"
        app:cardBackgroundColor="#99000000"
        app:strokeWidth="0dp"
        app:cardElevation="4dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:padding="4dp"
            android:src="@drawable/ic_chevron_down"
            app:tint="@android:color/white"
            android:contentDescription="@string/expand_top_bar" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Bottom Floating Controls -->
    <FrameLayout
        android:id="@+id/bottomControlsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="16dp">

        <!-- Show PiP FAB (left side, shown when PiP is hidden) -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnShowPip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:visibility="gone"
            android:src="@drawable/ic_camera"
            app:fabSize="normal"
            app:backgroundTint="#CC000000"
            app:tint="@android:color/white"
            android:contentDescription="@string/show_camera"
            tools:visibility="visible" />

        <!-- Locked Track Chip (right side, shown when track is locked) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/lockedTrackChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:visibility="gone"
            app:chipIcon="@drawable/ic_lock"
            app:chipIconTint="@android:color/white"
            app:closeIconVisible="true"
            app:closeIconTint="@android:color/white"
            app:chipBackgroundColor="#CC000000"
            app:chipStrokeWidth="0dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="Track 357"
            tools:visibility="visible" />

    </FrameLayout>

    <!-- Bottom Sheet for Track Info -->
    <LinearLayout
        android:id="@+id/trackInfoBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_bottom_sheet"
        android:padding="16dp"
        android:elevation="16dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="100dp">

        <!-- Drag Handle -->
        <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Peek Content (always visible when sheet is shown) -->
        <LinearLayout
            android:id="@+id/trackInfoPeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <!-- Track Title -->
            <TextView
                android:id="@+id/trackInfoTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Track 357" />

            <!-- Lock Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLockTrack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_lock_open"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@android:color/white"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/track_lock" />

            <!-- Close Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCloseTrackInfo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                app:icon="@drawable/ic_close"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@android:color/white"
                app:iconSize="24dp"
                style="@style/Widget.Material3.Button.IconButton"
                android:contentDescription="@string/dialog_cancel" />

        </LinearLayout>

        <!-- Quick Info Row -->
        <TextView
            android:id="@+id/trackInfoQuick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#B0FFFFFF"
            android:textSize="14sp"
            tools:text="ðŸ“ 30.04Â°, 31.23Â°  ðŸ“ 120m  ðŸ’¨ 15m/s" />

        <!-- Expanded Content (visible when pulled up) -->
        <LinearLayout
            android:id="@+id/trackInfoExpanded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Divider -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerColor="#33FFFFFF" />

            <!-- Position Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/track_info_position"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/trackInfoPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="30.044400Â°, 31.235700Â°" />

            <!-- Movement Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/track_info_movement"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/trackInfoMovement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="Alt: 120m  Speed: 15m/s  Heading: 45Â°" />

            <!-- Radar Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/track_info_radar_data"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/trackInfoRadar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="Range: 1.2km  Azimuth: 32Â°" />

            <!-- Classification Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/track_info_classification"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/trackInfoClassification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                tools:text="Drone (85%)" />

            <!-- Divider -->
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:dividerColor="#33FFFFFF" />

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCenterOnTrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/center_on_map"
                app:icon="@drawable/ic_center"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
