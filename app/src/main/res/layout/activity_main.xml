<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Status Bar -->
    <LinearLayout
        android:id="@+id/statusBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/status_bar_bg"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/radarStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”´ Radar: Disconnected"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/droneStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”´ Drone: Disconnected"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/cameraStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”´ Camera: Off"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
            
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_preferences"
            android:tint="@android:color/white"
            android:contentDescription="Settings" />
    </LinearLayout>

    <!-- Content Container -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statusBar"
        app:layout_constraintBottom_toTopOf="@id/bottomToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Map Container -->
        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Camera Container -->
        <FrameLayout
            android:id="@+id/cameraContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            
            <!-- Camera feed will be added here programmatically -->
            
            <!-- Locked Track Indicator for Camera Mode -->
            <TextView
                android:id="@+id/lockedTrackIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="#CC000000"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Locked: Track 357" />
        </FrameLayout>

        <!-- Split View Container (for PiP camera in map mode) -->
        <FrameLayout
            android:id="@+id/pipCameraContainer"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:background="@android:color/black"
            android:visibility="gone"
            android:elevation="4dp">
            
            <!-- PiP camera feed will be added here programmatically -->
        </FrameLayout>
    </FrameLayout>

    <!-- Bottom Toolbar -->
    <LinearLayout
        android:id="@+id/bottomToolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/toolbar_bg"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnMapMode"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ—º Map"
            android:textAllCaps="false"
            style="?attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnCameraMode"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸŽ¥ Camera"
            android:textAllCaps="false"
            style="?attr/borderlessButtonStyle" />

        <Button
            android:id="@+id/btnSplitMode"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ—º+ðŸŽ¥ Both"
            android:textAllCaps="false"
            style="?attr/borderlessButtonStyle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
