<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ========================================
             RADAR SETTINGS SECTION
             ======================================== -->
        
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¡"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Radar Settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <!-- Radar Base URL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Radar Base URL"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etRadarBaseUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="http://192.168.1.100:8080"
                    android:inputType="textUri"
                    android:layout_marginBottom="16dp" />

                <!-- Poll Interval -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Poll Interval (seconds)"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etPollInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="1"
                    android:inputType="number"
                    android:layout_marginBottom="16dp" />

                <!-- Stale Timeout -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Stale Timeout (seconds)"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <EditText
                    android:id="@+id/etStaleTimeout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="5"
                    android:inputType="number"
                    android:layout_marginBottom="16dp" />

                <!-- Test Connection Button -->
                <Button
                    android:id="@+id/btnTestConnection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Test Connection"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <!-- Test Result -->
                <TextView
                    android:id="@+id/tvTestResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:background="#F5F5F5"
                    android:visibility="gone"
                    android:textSize="14sp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================
             MAP SETTINGS SECTION
             ======================================== -->
        
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ—ºï¸"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Map Settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <!-- Offline Maps Subsection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Offline Maps"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage offline map files (.mbtiles, .sqlite)"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="12dp" />

                <!-- Current Map Status -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Map Source"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvCurrentMapSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Default (Online Tiles)"
                            android:textSize="14sp"
                            android:textColor="#424242" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Map Files List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMapFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:nestedScrollingEnabled="false"
                    android:minHeight="100dp" />

                <!-- Empty State -->
                <TextView
                    android:id="@+id/tvEmptyMaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No offline maps found.\nTap 'Add Map File' to import."
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:textAlignment="center"
                    android:padding="24dp"
                    android:visibility="gone" />

                <!-- Map Management Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <Button
                        android:id="@+id/btnAddMapFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Map File"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                    <Button
                        android:id="@+id/btnMapInstructions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Instructions"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="#E0E0E0" />

                <!-- Map Display Options Subsection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Display Options"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Show Compass -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowCompass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Compass"
                    android:layout_marginBottom="8dp" />

                <!-- Show Zoom Buttons -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowZoomButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Zoom Controls"
                    android:layout_marginBottom="8dp" />

                <!-- Show Scale Bar -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowScaleBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Scale Bar"
                    android:layout_marginBottom="8dp" />

                <!-- Enable Map Rotation -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEnableMapRotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Map Rotation"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âš ï¸ Professional radar systems typically keep map North-up (rotation disabled)"
                    android:textSize="11sp"
                    android:textColor="#FF6B00"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================
             DRONE SETTINGS SECTION
             ======================================== -->
        
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Drone Settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <!-- Mission Update Interval -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mission Update Interval (seconds)"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How often to send new GPS commands to drone when tracking"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <EditText
                    android:id="@+id/etMissionUpdateInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="3"
                    android:inputType="number"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================
             SECURITY SETTINGS SECTION
             ======================================== -->
        
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”"
                        android:textSize="24sp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Security Settings"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update your login credentials for settings access"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Warning for default credentials -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardDefaultCredentialsWarning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF3E0"
                    app:strokeWidth="1dp"
                    app:strokeColor="#FF9800">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="âš ï¸"
                            android:textSize="20sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="You are using default credentials.\nPlease change them for security."
                            android:textSize="13sp"
                            android:textColor="#E65100" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Current Username Display -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Username"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvCurrentUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="admin"
                    android:textSize="16sp"
                    android:textColor="#1976D2"
                    android:padding="12dp"
                    android:background="#E3F2FD"
                    android:layout_marginBottom="16dp" />

                <!-- New Username -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNewUsername"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="New Username"
                    app:startIconDrawable="@drawable/ic_person">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNewUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- New Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNewPassword"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="New Password"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilConfirmPassword"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Confirm Password"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:endIconMode="password_toggle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Update Credentials Button -->
                <Button
                    android:id="@+id/btnUpdateCredentials"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Credentials"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ========================================
             SAVE BUTTON
             ======================================== -->
        
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save All Settings"
            android:textSize="16sp"
            android:paddingVertical="14dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>
</ScrollView>
