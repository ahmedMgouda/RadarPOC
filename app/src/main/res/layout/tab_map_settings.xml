<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ—ºï¸"
                android:textSize="32sp"
                android:layout_marginEnd="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Map Configuration"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage offline maps and display options"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Offline Maps Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Offline Maps"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“¥"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Import .mbtiles files for offline use"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Current Map Status -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E8F5E9"
                    app:strokeWidth="1dp"
                    app:strokeColor="#4CAF50">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“ Current Map Source"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"
                            android:layout_marginBottom="6dp" />

                        <TextView
                            android:id="@+id/tvCurrentMapSource"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Default (Online Tiles)"
                            android:textSize="14sp"
                            android:textColor="#1B5E20" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Map Files List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvMapFiles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:nestedScrollingEnabled="false"
                    android:minHeight="80dp" />

                <!-- Empty State -->
                <TextView
                    android:id="@+id/tvEmptyMaps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¦\n\nNo offline maps imported\nTap 'Add Map' to get started"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:padding="32dp"
                    android:visibility="gone" />

                <!-- Map Management Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnAddMapFile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Map"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button" />

                    <Button
                        android:id="@+id/btnMapInstructions"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Help"
                        android:layout_marginStart="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Display Options Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Display Options"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš™ï¸"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Customize map interface elements"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Show Compass -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowCompass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Compass"
                    android:padding="12dp"
                    android:layout_marginBottom="4dp" />

                <!-- Show Zoom Buttons -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowZoomButtons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Zoom Controls"
                    android:padding="12dp"
                    android:layout_marginBottom="4dp" />

                <!-- Show Scale Bar -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchShowScaleBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Show Scale Bar"
                    android:padding="12dp"
                    android:layout_marginBottom="4dp" />

                <!-- Enable Map Rotation -->
                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEnableMapRotation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Map Rotation"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp" />

                <!-- Rotation Warning -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFF3E0"
                    app:strokeWidth="1dp"
                    app:strokeColor="#FF9800">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Tip: Professional radar systems typically keep maps North-up (rotation disabled) for better situational awareness"
                        android:textSize="12sp"
                        android:textColor="#E65100"
                        android:padding="12dp"
                        android:lineSpacingExtra="2dp" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Track Marker Size Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Track Marker Size"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Adjust the size of track markers on the map"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp" />

                <!-- Size Preview and Label -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current Size:"
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvMarkerSizeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Large (2.0x)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <!-- Marker Size Slider -->
                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderMarkerSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="1.0"
                    android:valueTo="3.0"
                    android:stepSize="0.5"
                    android:value="2.0"
                    android:layout_marginBottom="8dp" />

                <!-- Size Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Small"
                        android:textSize="12sp"
                        android:textColor="#999999" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Medium"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Large"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Extra Large"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E3F2FD"
                    app:strokeWidth="1dp"
                    app:strokeColor="#2196F3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Larger markers are easier to see and tap, especially in the field. The default (2.0x) provides good visibility for most use cases."
                        android:textSize="12sp"
                        android:textColor="#0D47A1"
                        android:padding="12dp"
                        android:lineSpacingExtra="2dp" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
