<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerContainer"
    android:layout_width="@dimen/drawer_width"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_drawer"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true">

    <!-- ════════════════════════════════════════ -->
    <!-- HEADER with Stats -->
    <!-- ════════════════════════════════════════ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_drawer_header"
        android:paddingTop="32dp"
        android:paddingBottom="16dp"
        android:paddingHorizontal="20dp">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Radar Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_radar"
                app:tint="@android:color/white"
                android:contentDescription="Radar tracks" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Tracks"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#B0FFFFFF"
                    android:layout_marginTop="2dp"
                    tools:text="Updated just now" />

            </LinearLayout>

            <!-- Total Count Badge -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#33FFFFFF">

                <TextView
                    android:id="@+id/tvDrawerTrackCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="36dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:text="0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Stats Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <!-- Active Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvActiveCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/track_active" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active"
                    android:textSize="10sp"
                    android:textColor="#B0FFFFFF"
                    android:textAllCaps="true" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#33FFFFFF" />

            <!-- Stale Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvStaleCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/track_stale" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stale"
                    android:textSize="10sp"
                    android:textColor="#B0FFFFFF"
                    android:textAllCaps="true" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="#33FFFFFF" />

            <!-- Locked Count -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLockedCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/track_locked" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Locked"
                    android:textSize="10sp"
                    android:textColor="#B0FFFFFF"
                    android:textAllCaps="true" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- ════════════════════════════════════════ -->
    <!-- FILTER CHIPS -->
    <!-- ════════════════════════════════════════ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:background="#1A1A1A">

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scrollbars="none">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/filterChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true"
                app:chipSpacingHorizontal="4dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="All"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:checked="true"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipMinHeight="32dp"
                    app:chipStrokeWidth="0dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipActive"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Active"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipMinHeight="32dp"
                    app:chipStrokeWidth="0dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipStale"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Stale"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipMinHeight="32dp"
                    app:chipStrokeWidth="0dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLocked"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Locked"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    style="@style/Widget.Material3.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_color"
                    app:chipMinHeight="32dp"
                    app:chipStrokeWidth="0dp"
                    app:checkedIconVisible="false" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <!-- Sort Button -->
        <ImageButton
            android:id="@+id/btnSort"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_sort"
            app:tint="#888888"
            android:contentDescription="Sort tracks by distance, speed, or ID" />

    </LinearLayout>

    <!-- ════════════════════════════════════════ -->
    <!-- TRACK LIST -->
    <!-- ════════════════════════════════════════ -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTrackList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingVertical="4dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
            android:scrollbarStyle="outsideOverlay"
            android:overScrollMode="never" />

        <!-- Empty State -->
        <LinearLayout
            android:id="@+id/llEmptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/ivEmptyRadar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_radar"
                app:tint="#444444"
                android:contentDescription="No tracks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Tracks Detected"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#888888"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvEmptyMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracks will appear here when detected"
                android:textSize="13sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp" />

            <!-- Connection Status Chip -->
            <LinearLayout
                android:id="@+id/llConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="8dp"
                android:background="@drawable/bg_status_chip">

                <View
                    android:id="@+id/vConnectionDot"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_status_dot_red" />

                <TextView
                    android:id="@+id/tvConnectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Connecting..."
                    android:textSize="12sp"
                    android:textColor="#AAAAAA" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- ════════════════════════════════════════ -->
    <!-- BOTTOM ACTIONS -->
    <!-- ════════════════════════════════════════ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:paddingVertical="8dp"
        android:background="#1A1A1A">

        <!-- Clear Locks -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearLocks"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Clear Locks"
            android:textSize="12sp"
            android:textColor="#888888"
            app:icon="@drawable/ic_lock_open"
            app:iconSize="18dp"
            app:iconTint="#888888"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            style="@style/Widget.Material3.Button.TextButton" />

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:background="#333333" />

        <!-- Refresh -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefresh"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Refresh"
            android:textSize="12sp"
            android:textColor="#888888"
            app:icon="@drawable/ic_refresh"
            app:iconSize="18dp"
            app:iconTint="#888888"
            app:iconGravity="textStart"
            app:iconPadding="4dp"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>

</LinearLayout>
